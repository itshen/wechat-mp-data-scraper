{
  "manifest_version": 3,
  "name": "微信公众号数据抓取工具",
  "version": "1.0.0",
  "description": "一个简约的工具，用于抓取微信公众号发布数据",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "notifications"
  ],
  "host_permissions": [
    "https://mp.weixin.qq.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mp.weixin.qq.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "微信公众号数据抓取",
    "default_icon": {
      "16": "icons/icon_16x16.png",
      "32": "icons/icon_32x32.png",
      "64": "icons/icon_64x64.png",
      "128": "icons/icon_128x128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "icons": {
    "16": "icons/icon_16x16.png",
    "32": "icons/icon_32x32.png",
    "64": "icons/icon_64x64.png",
    "128": "icons/icon_128x128.png"
  }
}
